<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray3">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="132dp"
        android:background="@color/light_gray">

        <TextView
            android:id="@+id/textView41"
            android:layout_width="552dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="23dp"
            android:fontFamily="@font/francois_one"
            android:text='Para continuar escriba "RESTAURAR"'
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonObsvNo"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textoPass"
            android:layout_alignParentStart="true"
            android:layout_marginStart="94dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/btmenuop"
            android:fontFamily="@font/francois_one"
            android:text="Cancelar"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonObsvSi"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textoPass"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="104dp"
            android:background="@drawable/btmenuverde"
            android:fontFamily="@font/francois_one"
            android:text="Continuar"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/textoPass"
            android:layout_width="465dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView41"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:fontFamily="@font/francois_one"
            android:hint="@string/contras"
            android:inputType="textMultiLine"
            android:lines="10"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </RelativeLayout>
</RelativeLayout>