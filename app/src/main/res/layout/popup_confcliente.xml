<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco_transparente">

    <RelativeLayout
        android:layout_width="573dp"
        android:layout_height="489dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/popupborde">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="504dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/francois_one"
            android:text="@string/confCliente"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/ConfId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="133dp"
            android:fontFamily="@font/francois_one"
            android:hint="Id Cliente"
            android:textAlignment="center"
            android:textColor="@color/light_purple"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/ConfProp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="196dp"
            android:fontFamily="@font/francois_one"
            android:hint="Nombre propietario"
            android:textAlignment="center"
            android:textColor="@color/light_purple"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/ConfEstb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="260dp"
            android:fontFamily="@font/francois_one"
            android:hint="Nombre establecimiento"
            android:textAlignment="center"
            android:textColor="@color/light_purple"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonConfCliente"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/btmenuverde"
            android:fontFamily="@font/cagliostro"
            android:text="@string/confirmar"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonAnCliente"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/btmenuop"
            android:fontFamily="@font/cagliostro"
            android:text="@string/volver"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

    </RelativeLayout>

</RelativeLayout>