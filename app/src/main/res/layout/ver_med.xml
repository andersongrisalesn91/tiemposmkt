<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_margin="0dp"
    android:background="@drawable/fondoitem1"
    android:padding="0dp">


    <ImageView
        android:id="@+id/IVRVimgMED"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        app:srcCompat="@drawable/imagen1" />

    <TextView
        android:id="@+id/TVNomProy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/IVRVimgMED"
        android:fontFamily="sans-serif-condensed-medium"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="2dp"
        android:text="Texto de Nombre Proyecto "
        android:textColor="@color/blanco_transparente"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TVNomMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVNomProy"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/IVRVimgMED"
        android:fontFamily="sans-serif-condensed-medium"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="2dp"
        android:text="Texto de medicion (AÃ±o - Mes)"
        android:textColor="@color/blanco_transparente"
        android:textSize="12sp" />

</RelativeLayout>