<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="592dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="132dp"
        android:background="@color/light_gray">

        <TextView
            android:id="@+id/textView41"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:fontFamily="@font/francois_one"
            android:text="Observaciones"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonObsvNo"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="82dp"
            android:layout_marginStart="101dp"
            android:background="@drawable/btmenuop"
            android:fontFamily="@font/francois_one"
            android:text="Descartar"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonObsvSi"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/buttonObsvNo"
            android:layout_marginEnd="104dp"
            android:background="@drawable/btmenuverde"
            android:fontFamily="@font/francois_one"
            android:text="Guardar"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/textoPass"
            android:layout_width="465dp"
            android:layout_height="287dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="127dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:fontFamily="@font/francois_one"
            android:hint="@string/observ"
            android:inputType="textMultiLine"
            android:lines="10"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </RelativeLayout>
</RelativeLayout>