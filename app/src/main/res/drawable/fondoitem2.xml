<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#a57ed6" />
            <gradient android:angle="-90" android:startColor="#a57ed6" android:endColor="#a57ed6"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#682eee" />
            <solid android:color="#682eee"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="0dip" android:color="#FF24355E" />
            <gradient android:angle="-90" android:startColor="#7B4375FF" android:endColor="#7B4110FF" />
        </shape>
    </item>
</selector>