<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#FFFFFFFF" />
            <gradient android:angle="-90" android:startColor="#a57ed6" android:endColor="#a57ed6"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#FFFFFFFF" />
            <solid android:color="#682eee"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#FFFFFFFF" />
            <gradient android:angle="-90" android:startColor="#FF41568A" android:endColor="#FF41568A" />
        </shape>
    </item>
</selector>