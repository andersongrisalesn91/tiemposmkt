<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#a57ed6" />
            <gradient android:angle="-90" android:startColor="#a57ed6" android:endColor="#a57ed6"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#682eee" />
            <solid android:color="#682eee"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="32dip" />
            <stroke android:width="1dip" android:color="#FF8BD515" />
            <gradient android:angle="90" android:startColor="#FF8AB140" android:endColor="#FF8BD515" />
        </shape>
    </item>
</selector>